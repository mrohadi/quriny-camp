<%- include("../partials/header") %>

<!-- Main Content -->
<div class="container-fluid mb-4 px-5">
  <div class="grid">
    <% campgrounds.forEach(campground =>{ %>
    <div class="grid-sizer">
      <div class=" grid-item">
        <div class="card">
          <img class="card-img-top" src="<%= campground.image%>" />
          <div class="card-body">
            <h4 class="card-title"><%= campground.name %></h4>
            <p class="card-text">
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-success mybtn">More Info</a>
            </p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
          </div>
        </div>

      </div>
    </div>
    <% }) %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Post new campground</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-5">
        <form action="/campgrounds" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="name" />
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url" />
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" />
          </div>
          <!-- <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="description" />
          </div> -->

          <div class="form-group">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"
              placeholder="description"></textarea>
          </div>

          <div class="form-group">
            <button class="btn btn-lg btn-success btn-block mybtn">Submit</button>
          </div>
        </form>
        <a href="/campgrounds"> &#8592 Go Back</a>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>